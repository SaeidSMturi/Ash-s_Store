<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/FontAwesome/css/fontawesome.css">
    <link rel="stylesheet" href="/FontAwesome/css/solid.css">
    <link rel="stylesheet" href="/FontAwesome/css/brands.css">
    <link rel="stylesheet" href="/FontAwesome/css/duotone.css">
    <link rel="stylesheet" href="/css/site.css">
</head>

<body>
    <main class="w-100">
        <nav class="main-menu">
            <h1 class="d-none d-lg-block">Admin Panel</h1>
            <ul>
                <li class="nav-item">
                    <a asp-area="admin" asp-controller="Home" asp-action="Index"> 
                        <i class="fa fa-house nav-icon"></i>
                        <span class="nav-text d-none d-lg-block">Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Order" asp-action="Index">
                        <i class="fa fa-bag-shopping nav-icon"></i>
                        <span class="nav-text d-none d-lg-block">Orders</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index">
                        <i class="fa fa-pills nav-icon"></i>
                        <span class="nav-text d-none d-lg-block">Products</span>
                    </a>
                </li>

                <hr class="mx-auto w-75">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Account" asp-action="Logout">
                        <i class="fa-solid fa-arrow-right-from-bracket nav-icon"></i>
                        <span class="nav-text d-none d-lg-block">Logout</span>
                    </a>
                </li>
            </ul>
        </nav>
        <section class="content">
            @RenderBody()
        </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>