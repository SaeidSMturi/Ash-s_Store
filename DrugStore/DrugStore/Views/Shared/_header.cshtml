
<div class="site-navbar py-2">

    <div class="search-wrap">
        <div class="container">
            <a href="#" class="search-close js-search-close"><span class="icon-close2"></span></a>
            <form action="#" method="post">
                <input type="text" class="form-control" placeholder="Search keyword and hit enter...">
            </form>
        </div>
    </div>

    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <div class="logo">
                <div class="site-logo">
                    <a href="/" class="js-logo-clone">Rose Pharmacy</a>
                </div>
            </div>
            <div class="main-nav d-none d-lg-block">
                <nav class="site-navigation text-right text-md-center" role="navigation">
                    <ul class="site-menu js-clone-nav d-none d-lg-block">
                        <li><a href="/">Home</a></li>
                        <li><a asp-area="" asp-controller="Product" asp-action="Index">Product</a></li>

                        @* @if (!User.Identity.IsAuthenticated)
                        {
                            <li><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                            <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
                        } *@
                        <li><a asp-area="" asp-controller="Home" asp-action="AboutUs">About</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        }
                        @if (User.IsInRole("1"))
                        {
                            <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Panel</a></li>
                        }
                    </ul>
                </nav>
            </div>
            <div class="icons">
                <a href="/cart" class="icons-btn d-inline-block bag">
                    <span class="icon-shopping-bag"></span>
                </a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-area="UserPanel" asp-controller="Home" asp-action="Index" class="icons-btn d-inline-block bag">
                        <span class="icon-user"></span>
                    </a>
                }
                else
                {
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="icons-btn d-inline-block bag">
                        <span class="icon-user"></span>
                    </a>
                }

                <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none">
                    <span class="icon-menu"></span>
                </a>
            </div>
        </div>
    </div>
</div>
