@using DrugStore.Data.Entities.Product
@model Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-5 mr-auto">
                <div class="border text-center">
                    <img src="/images/product/@Model.ImageName" alt="Image" class="img-fluid p-5">
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="text-black">@Model.Name</h2>
                <p>
                    @Model.Description
                </p>


                <p><strong class="text-primary h4">@Model.Price.ToString("C")</strong></p>


                <p><a asp-area="" asp-controller="Order" asp-action="AddOrderToCart" asp-route-id="@Model.Id" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary">Add To Cart</a></p>

          
            </div>
        </div>
    </div>
</div>